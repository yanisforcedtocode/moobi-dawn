  "settings": [
    {
      "type": "select",
      "id": "picker_type",
      "options": [
        {
          "value": "dropdown",
          "label": "Drop down"
        },
        {
          "value": "button",
          "label": "Button"
        }
      ],
      "default": "button",
      "label": "Variant picker type"
    },
    {
      "type": "text",
      "id": "share_label",
      "label": "Share label",
      "default": "Share"
    }
  ],
  "presets": [
    {
      "name": "Product add section"
    }
  ]
}
{% endschema %}
